@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-action="Edit" >


    <partial name="PartialViews/CreateEditPV" model="Model" />



    <a asp-action="AddOrRemoveUser" class="btn btn-success mt-4" asp-route-roleId="@Model.Id">Add Or Remove Users</a>


    <input type="submit" value="Save" class="btn btn-primary mt-4" />

    <a asp-action="Index" class="btn btn-warning mt-4 mx-3">Back To List</a>
</form>

@section validateInput {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}