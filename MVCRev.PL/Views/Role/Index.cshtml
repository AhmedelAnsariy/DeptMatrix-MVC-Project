@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles </h1>


<form asp-action="Index">

    <div class="d-flex align-items-center justify-content-center">
        <input type="text" class="form-control col-md-10" name="searchInput" id="searchInput" />
        <input type="submit" value="Search" class="btn btn-success col-md-2 m-3" />
    </div>

</form>



<a asp-controller="Role" asp-action="Create" class="btn btn-primary mb-4">Create Role</a>


       
   

@if (Model.Count() > 0)
{
    <div class="container">
        <table class="table table-striped table-hover text-center" style="padding-left: 150px;">

            <thead>
            </thead>
            <tr>


                 <th> @Html.DisplayNameFor(d => d.Id)</th> 
              

                    <th> @Html.DisplayNameFor(d => d.RoleName)</th> 
                
               





                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>


            </tr>
            <tbody>
                @foreach (var department in Model)
                {
                    <tr>
                       <td>@department.Id</td>


                        <td>@department.RoleName</td>
               

                        



                        <partial name="_ButtonsTable" model="@department.Id" />


                    </tr>
                }
            </tbody>


        </table>
    </div>
}
else
{
    <div class="mt-4 alert alert-danger">
        <h4>There is No Roles  To Show : </h4>
    </div>
}

