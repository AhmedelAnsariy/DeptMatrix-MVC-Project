@model SignUpViewModel

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>SignUp</h1>


	<div class="main-agileinfo">
	<div  class="aler alert-danger">
		<span asp-validation-summary="All"></span>
	</div>



		<div class="agileits-top">
			<form action="#" method="post">

			<input class="text my-3" asp-for="UserName" placeholder="Username" required="">
			<input class="text my-3" asp-for="FirstName" placeholder="First Name" required="">
			<input class="text my-3" asp-for="LastName" placeholder="Last Name" required="">


			<input class="text" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="NationalNumber" placeholder="National Number " required="">

			<input class="text" asp-for="PhoneNumber" placeholder="Phone Number  " required="">


			<input class="text" asp-for="Password" type="password" placeholder="Password" required="">

			<input class="text" asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" required="">



			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>


				<input type="submit" value="SIGNUP">
			</form>
		<p>Don't have an Account? <a asp-action="SignIn"> Login Now!</a></p>
		</div>
	</div>


@section validateInput {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

	