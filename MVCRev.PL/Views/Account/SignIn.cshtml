
@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}




<div class="main-agileinfo">
	<div class="aler alert-danger">
		<span asp-validation-summary="All"></span>
	</div>



	<div class="agileits-top">
		<form asp-action="SignIn">

			<input class="text" asp-for="Email" placeholder="Email" required="">
		
			<input class="text" asp-for="Password" type="password" placeholder="Password" required="">



			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree" class="checkbox" >
					<span> Remember Me </span>
				</label>
				<div class="clear"> </div>
			</div>




			<input type="submit" value="SIGNIP">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp"> Register Now!</a></p>
		<p>Don't have an Account? <a asp-action="ForgerPassword"> Forget Password ?  </a></p>
	</div>
</div>


@section validateInput {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}